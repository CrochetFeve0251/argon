{
    "extends": "./tsconfig.build.json",
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "sourceMap": false,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "traceResolution": false,
        "experimentalDecorators": true
    },
    "include": [
        "types/declarations.d.ts",
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}